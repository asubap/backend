{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "target": "ES2021",
      "lib": ["ES2021"],
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "baseUrl": "./src",
      "types": ["node", "express", "jest"]
    },
    "include": ["src", "tests"],
    "exclude": ["node_modules", "dist"]
  }
  
